{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "http://192.168.93.134/dev/schemas/open-badge/1.0.0.json",
  "type": "object",
  "allOf": [
    {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "$id": "https://192.168.93.134/dev/schemas/vc-core/1.0.0.json",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "@context": {
          "oneOf": [
            {
              "type": "string",
              "format": "uri"
            },
            {
              "type": "array",
              "items": {
                "type": "string",
                "format": "uri"
              },
              "minItems": 1
            }
          ]
        },
        "type": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1,
          "contains": {
            "const": "VerifiableCredential"
          }
        },
        "issuer": {
          "oneOf": [
            {
              "type": "string",
              "pattern": "^did:[a-z0-9]+:.*"
            },
            {
              "type": "object",
              "additionalProperties": true,
              "required": [
                "id"
              ],
              "properties": {
                "id": {
                  "type": "string",
                  "pattern": "^did:[a-z0-9]+:.*"
                }
              }
            }
          ]
        },
        "issuanceDate": {
          "type": "string",
          "format": "date-time"
        },
        "expirationDate": {
          "type": "string",
          "format": "date-time"
        },
        "credentialSubject": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "id": {
              "type": "string"
            }
          }
        },
        "credentialSchema": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "string",
              "format": "uri"
            },
            "type": {
              "type": "string"
            },
            "hash": {
              "type": "string",
              "pattern": "^0x[0-9a-fA-F]{64}$"
            }
          }
        },
        "credentialStatus": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "id": {
              "type": "string",
              "format": "uri"
            },
            "type": {
              "type": "string"
            },
            "statusPurpose": {
              "type": "string"
            },
            "statusListIndex": {
              "type": "string",
              "pattern": "^[0-9]+$"
            },
            "statusListCredential": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        "evidence": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "object"
              }
            },
            {
              "type": "object"
            }
          ]
        },
        "termsOfUse": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "object"
              }
            },
            {
              "type": "object"
            }
          ]
        },
        "proof": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": [
        "@context",
        "type",
        "issuer",
        "issuanceDate",
        "credentialSubject"
      ],
      "$defs": {
        "did": {
          "type": "string",
          "pattern": "^did:[a-z0-9]+:.*"
        },
        "uri": {
          "type": "string",
          "format": "uri"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    {
      "type": "object",
      "properties": {
        "credentialSubject": {
          "type": "object",
          "properties": {
            "achievement": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "criteriaId": {
                  "type": "string"
                },
                "criteriaNarrative": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "name",
                "criteriaId"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "achievement"
          ]
        },
        "evidence": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "EmployeeIDCardEvidence"
              ]
            },
            "source": {
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "credentialSubject",
        "evidence"
      ],
      "additionalProperties": false
    }
  ]
}